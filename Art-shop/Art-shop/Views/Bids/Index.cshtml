    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage_admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BidderName)
