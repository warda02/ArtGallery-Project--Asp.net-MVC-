<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <title>Artsy</title>
    <link href="~/AssetsSite/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AssetsSite/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/AssetsSite/css/global.css" rel="stylesheet">
    <link href="~/AssetsSite/css/index.css" rel="stylesheet">
    <link href="~/AssetsSite/C2/StyleSheet1.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz@9..144&display=swap" rel="stylesheet">

</head>

<body>

    <!-- ======= Header ======= -->
    <div class="main clearfix position-relative">
        <div class="main_1 clearfix position-absolute top-0 w-100">
            <section id="header">
                <nav class="navbar navbar-expand-md navbar-light" id="navbar_sticky">
                    <div class="container-xl">
                        <a class="navbar-brand fs-2 p-0 fw-bold text-white" href="@Url.Action("Index", "Home")">
                            ARTSY
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mb-0 ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("About", "Home")">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("Artists", "Home")">Artists</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="@Url.Action("Artwork", "Home")" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Shop_Art
                                    </a>
                                    <ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="@Url.Action("Artwork", "Home")">ArtWork</a></li>
                                        <li><a class="dropdown-item border-0" href="@Url.Action("ArtworkDetail", "Home")">Artwork Detail</a></li>

                                    </ul>
                                </li>



                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Discover More
                                    </a>
                                    <ul class="dropdown-menu drop_1" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="@Url.Action("Auctions", "Home")">Auctions</a></li>
                                        <li><a class="dropdown-item border-0" href="@Url.Action("MemberArtwork", "Home")">Gallery</a>
                                        <li><a class="dropdown-item border-0" href="@Url.Action("Shows", "Home")">Exhibition</a>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" aria-current="page" href="@Url.Action("Logout", "user_info")">Logout</a>
                                </li>




                            </ul>
                        </div>
                    </div>
                </nav>
            </section>
        </div>
    </div>


    <div>
        @RenderBody()
    </div>


    <!-- ======= Footer ======= -->

 
 




    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>